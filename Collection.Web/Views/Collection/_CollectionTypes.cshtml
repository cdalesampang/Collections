@model IEnumerable<Collection.Data.Models.CollectionType>
@using Microsoft.AspNet.Identity
<div id="modal-types" class="modal fade" tabindex="-8" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4>Select Collection Type</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12" style="height:200px;overflow-y:auto;">
                        <table class="table table-hover" id="select-type">
                            <thead>
                                <tr>
                                    <th colspan="2">Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        if (item.Sales == true)
                                        {
                                            <tr>
                                                <td class="type" data-id="@item.CollectionTypeId">@item.Type</td>
                                                
                                                @if (item.CollectionTypeId != 44)
                                                {
                                                    <td class="delete" data-id="@item.CollectionTypeId"><i class="fa fa-trash fa-lg red" aria-hidden="true"></i></td>
                                                }

                                            </tr>
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (User.Identity.GetUserName().AsBool())
                    {
                        <div class="col-xs-12">
                            <button type="button" id="btnAddTypeExpense" class="btn btn-primary">Add Type</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-expense" class="modal fade" tabindex="-8" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4>Select Collection Type</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12" style="height:200px;overflow-y:auto;">
                        <table class="table table-hover" id="select-type">
                            <thead>
                                <tr>
                                    <th colspan="2">Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        if (item.Sales == false)
                                        {
                                            <tr>
                                                <td class="type" data-id="@item.CollectionTypeId">@item.Type</td>
                                               @if (item.CollectionTypeId != 45)
                                               {
                                                <td class="delete" data-id="@item.CollectionTypeId"><i class="fa fa-trash fa-lg red" aria-hidden="true"></i></td>
                                               }
                                            </tr>
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (User.Identity.GetUserName().AsBool())
                    {
                        <div class="col-xs-12">
                            <button type="button" id="btnAddType" class="btn btn-primary">Add Type</button>
                        </div>
                    }
                       
                    
                    
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-add-type" class="modal fade" role="dialog" tabindex="-5">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                <h4>Enter Collection Type</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Type:</label>
                    <input type="text" class="form-control" id="collectionType" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelType" class="btn btn-danger">Cancel</button>
                <button type="submit" id="btnSaveType" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<div id="modal-add-expense-type" class="modal fade" role="dialog" tabindex="-5">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times;</span></button>
                <h4>Enter Collection Type</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Type:</label>
                    <input type="text" class="form-control" id="collectionExpenseType" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelExpenseType" class="btn btn-danger">Cancel</button>
                <button type="submit" id="btnSaveExpenseType" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>